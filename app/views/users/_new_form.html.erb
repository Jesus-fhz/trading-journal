<div class="d-flex p-2 bd-highlight justify-content-center align-items-center" style="width:100% ; height: 100vh;">
  <div class="card border-dark mb-3 col-md-8" >
    <div class="card-header">Signup!</div>
        <div class="card-body">
            <div class="text-center mb-3">
                <a class="navbar-brand " href="/" ><%= image_tag "logo_transparent.png"  %></a>
            </div>
            <% if @user.errors.any? %>
                <div class="alert alert-dismissible alert-danger">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <ul>
                    <% @user.errors.full_messages.each do |el| %>
                        <li>
                            <%=el %>
                        </li>
                    <% end %>
                    </ul>
                </div>
            <% end %>
        
            <%= form_with model: @user, local: true do |f| %>
                <div class=" col-md-12">
                    <%= f.label :name, class: 'form-label'  %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="col-md-12">
                    <%= f.label :last_name, class: 'form-label'  %>
                    <%= f.text_field :last_name, class: 'form-control' %>
                </div>
                <div class="col-md-12">
                    <%= f.label :email, class: 'form-label'  %>
                    <%= f.text_field :email, class: 'form-control' %>
                </div>
                <div class="col-md-12">
                    <%= f.label :dob, class: 'form-label'  %>
                    <%= f.text_field :dob, class: 'form-control datepicker_input' %>
                </div>
                <div class="col-md-12">
                    <%= f.label :password, class: 'form-label'  %>
                    <%= f.password_field :password, class: 'form-control' %>
                </div>
                <div class="col-md-12">
                    <%=f.label :password_confirmation %>
                    <%=f.password_field :password_confirmation, class:'form-control'%>
                </div>
                <div class="col-md-12 ">
                    <%= f.submit  class: 'btn btn-primary mt-3 col-md-4' %>
                </div>
            <% end %>
        </div>
        <p class="text-center"> 
            If you have an account, <%= link_to "login!",login_path %> 
        </p>
    </div>
</div>
