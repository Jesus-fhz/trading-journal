<div class="d-flex p-2 bd-highlight justify-content-center align-items-center" style="width:100% ; height: 100vh;">
<div class="card border-dark mb-3 col-md-2 card-width" >
   <div class="card-header">Welcome</div>
   <div class="card-body">
      <div class="text-center">
         <a class="navbar-brand" href="/" ><%= image_tag "logo_transparent.png"  %></a>
      </div>
      <%# we can use the form_with helper for generic forms that do not correspond to a model
         to do this we use a diferent syntax, we use 'url:some url here' instead of model @model %>
      <% if flash[:error] %>
      <strong> <%=  flash[:error] %></strong>
      <% end %>
      <%= form_with url: login_path, local: true do |f|  %>
      <div class="col-md-12">
         <%= f.label :email, class: 'form-label'  %>
         <%= f.text_field :email, class: 'form-control' %>
      </div>
      <div class="col-md-12">
         <%= f.label :password, class: 'form-label'  %>
         <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="col-md-12 ">
         <%= f.submit 'Login',  class: 'btn btn-primary mt-3 col-md-4' %>
      </div>
      <% end %>
   </div>
</div>