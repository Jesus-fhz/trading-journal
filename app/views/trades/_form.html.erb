
<% if @trade.errors.any? %>
<div class="alert alert-dismissible alert-danger">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  <ul>
    <% @trade.errors.full_messages.each do |el| %>
        <li>
            <%=el %>
        </li>
    <% end %>
    </ul>
</div>
    
<% end %>
<%= form_with model: @trade, local: true do |f| %>
    <div class=" col-md-12">
        <%= f.label :platform, class: 'form-label'  %>
        <%= f.text_field :platform, class: 'form-control', required: "true" %>
    </div>
    <div class="col-md-12">
        <%= f.label :symbol, class: 'form-label'  %>
        <%= f.text_field :symbol, class: 'form-control',  required: "true" %>
    </div>
     <div class="col-md-12">
        <%= f.label :leverage, class: 'form-label'  %>
        <%= f.text_field :leverage, class: 'form-control',  required: "true" %>
    </div>
     <div class="form-group col-md-12">
       <%= f.label :type_id, class: 'form-label'  %>
       <%=  f.collection_select :type_id, Type.all, :id, :name,{ include_blank: "Select option..." }, { class: "form-select",required: "true" }%>
    </div>
    <div class="form-group col-md-12">
       <%= f.label :perpetual_id, class: 'form-label'  %>
       <%=  f.collection_select :perpetual_id, Perpetual.all, :id, :perpetual_type,{ include_blank: "Select option..." }, { class: "form-select",  required: "true" } %>
    </div>
    <div class="col-md-12">
        <%= f.label :entry_date, class: 'form-label'  %>
        <%= f.text_field :entry_date, class: 'form-control datepicker_input',  required: "true" %>
    </div>
     <div class="col-md-12">
        <%= f.label :entry_price, class: 'form-label'  %>
        <%= f.text_field :entry_price, class: 'form-control',  required: "true" %>
    </div>
    <div class="col-md-12">
        <%= f.label :entry_amount, class: 'form-label'  %>
        <%= f.text_field :entry_amount, class: 'form-control',  required: "true" %>
    </div>
    <div class="col-md-12">
        <%= f.label :exit_price, class: 'form-label'  %>
        <%= f.text_field :exit_price, class: 'form-control',  required: "true" %>
    </div>
   
     <div class="col-md-12">
        <%= f.label :exit_date, class: 'form-label'  %>
        <%= f.text_field :exit_date, class: 'form-control datepicker_input',  required: "true" %>
    </div>
    <div class="col-md-12 ">
        <%= f.submit  class: 'btn btn-primary mt-3 col-md-4' %>
    </div>
<% end %>

